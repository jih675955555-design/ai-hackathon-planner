      }
      if (data.effect_quality_enabled && data.effect_quality_value) {
        quantitativeEffectsHTML += `
                    <div style="margin-bottom: 16px; padding: 12px; background: #f8fafc; border-radius: 8px;">
                        <strong>âœ… í’ˆì§ˆ/ì •í™•ë„ í–¥ìƒ</strong>
